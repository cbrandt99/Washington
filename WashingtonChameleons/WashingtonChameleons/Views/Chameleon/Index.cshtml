@model IEnumerable<WashingtonChameleons.Models.ChameleonTable>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Potential Chameleon Companies</h1>

<div id="toolbar" class="navbar navbar-light bg-light">
    <form class="form-inline">
        <div class="btn-group px-1 pr-5" role="group" aria-label="toolbar">
            <button id="btnList" type="button" class="btn btn-primary" disabled><i class="fas fa-list"></i></button>
            <button id="btnCard" type="button" class="btn btn-primary"><i class="fas fa-th"></i></button>
        </div>
        @using (Html.BeginForm())
        {
            <input name="SearchString" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
        }
    </form>
</div>
<div id="table" class="container">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CurrentName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormerName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateRegistered)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOoS)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StreetAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.City)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.State)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ZipCode)
                </th>
                <th class="px-3">
                    Confidence
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateRegistered)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOoS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StreetAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        <span aria-label="@item.ConfidenceLevel.Value" style="color: @ChameleonUtils.markerColors[item.ConfidenceLevel.Value]">

                            @for (int i = 0; i < item.ConfidenceLevel.Value; i++)
                            {
                                <i class="fas fa-square"></i>
                            }

                        </span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ChameleonId" class="btn btn-primary">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div id="cards" class="container" style="display: none">
    <div class="card-columns">

        @foreach (var item in Model)
        {
            <div class="card mb-3" style="max-width: 24rem">
                <div class="card-header">@Html.DisplayFor(modelItem => item.CurrentName)<br />Registered: @Html.DisplayFor(modelItem => item.DateRegistered)</div>
                <div class="card-header">@Html.DisplayFor(modelItem => item.FormerName)<br />Out of Service: @Html.DisplayFor(modelItem => item.DateOoS)</div>
                <div class="card-body">

                    <p class="card-text">@Html.DisplayFor(modelItem => item.StreetAddress),
                    @Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.State) @Html.DisplayFor(modelItem => item.ZipCode)</p>
                </div>
                <div class="card-body">
                    <span aria-label="@item.ConfidenceLevel.Value" style="color: @ChameleonUtils.markerColors[item.ConfidenceLevel.Value]">

                        @for (int i = 0; i < item.ConfidenceLevel.Value; i++)
                        {
                            <i class="fas fa-square"></i>
                        }

                    </span>
                </div>
                <div class="card-footer text-right">
                    <a asp-action="Details" asp-route-id="@item.ChameleonId" class="btn btn-primary">Details</a>
                </div>
            </div>
                }

            </div>
        </div>

        @section Scripts {

            <script>

                $(document).ready(function () {

                    $("#btnList").click(function () {

                        $("#cards").fadeOut(100);
                        $("#table").fadeIn(300);
                        $("#btnList").prop("disabled", true);
                        $("#btnCard").prop("disabled", false);

                    });

                    $("#btnCard").click(function () {

                        $("#table").fadeOut(100);
                        $("#cards").fadeIn(300);
                        $("#btnCard").prop("disabled", true);
                        $("#btnList").prop("disabled", false);

                    });
                });

            </script>

        }
